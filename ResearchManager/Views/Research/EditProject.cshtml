@model ResearchManager.project

@{
    TempData["ActiveUser"] = TempData["ActiveUser"];
    ViewBag.Title = "EditProject";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h2>EditProject</h2>


@using (Html.BeginForm("EditProject", "Research", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.projectID)
    <h4>Project</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.pName)
        </dt>

        <dd>
            @Html.EditorFor(model => model.pName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.pName, "", new { @class = "text-danger" })
            <br />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pDesc)
        </dt>

        <dd>
            @Html.EditorFor(model => model.pDesc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.pDesc, "", new { @class = "text-danger" })
            <br />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pAbstract)
        </dt>

        <dd>
            @Html.EditorFor(model => model.pAbstract, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.pAbstract, "", new { @class = "text-danger" })
            <br />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.projectStage)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.projectStage)
            <br />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.dateCreated)

        </dt>

        <dd>
            @Html.DisplayFor(model => model.dateCreated)
        </dd>

        <dd>
            <br />
            <input type="submit" value="Update" class="btn btn-default" />
        </dd>
    </dl>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
