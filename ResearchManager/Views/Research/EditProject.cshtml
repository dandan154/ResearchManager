@model ResearchManager.project

@{
    ViewBag.Title = "EditProject";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}


@using (Html.BeginForm("EditProject", "Research", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">@Html.DisplayFor(model => model.dateCreated)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.projectID)
    <h2>@Html.Raw(Model.projectStage)</h2>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.pName)
        </dt>

        <dd>
            @Html.EditorFor(model => model.pName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.pName, "", new { @class = "text-danger" })
            <br />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pDesc)
        </dt>

        <dd>
            @Html.EditorFor(model => model.pDesc, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.pDesc, "", new { @class = "text-danger" })
            <br />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.pAbstract)
        </dt>

        <dd>
            @Html.EditorFor(model => model.pAbstract, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.pAbstract, "", new { @class = "text-danger" })
            <br />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.projectStage)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.projectStage)
            <br />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.dateCreated)

        </dt>

        <dd>
            @Html.DisplayFor(model => model.dateCreated)
        </dd>
            <div class="form-group">
                @Html.LabelFor(model => model.projectFile, "Project File:", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBox("file", "", new { type = "file", accept = ".xls,.xlsx" })
                    @Html.ValidationMessageFor(model => model.projectFile, "", new { @class = "text-danger" })
                </div>
            </div>
        <dd>
            <br />
            <input type="submit" value="Update" class="btn btn-default" />
        </dd>
    </dl>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
