@model IEnumerable<ResearchManager.project>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ResearchLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.pName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.projectStage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.projectFile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pDesc)
        </th>
        <th>
        </th>
        <th>
            @Html.DisplayNameFor(model => model.user.forename)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.pName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dateCreated)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.projectStage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.projectFile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pDesc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pAbstract)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.user.forename)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.projectID }) |
            @Html.ActionLink("Details", "Details", new { id=item.projectID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.projectID })
        </td>
    </tr>
}

</table>
